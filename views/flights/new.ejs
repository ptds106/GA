<%- include('./partials/header') %>
    <h2>Enter a New Flight</h2>
 
    <form action="/flights" method="POST">
  <label >AIRLINE HEAD:<select name="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
  </select></label ><br/>
  <br/>
  <label>TAIL NUMBER : <input type="text" name="flightNumber" class = 'tail'/> </label><br/>
  <br/>
  <label>Destination : <select name="departureAirport">
    <option value="AUS">Austin</option>
    <option value="DAL">Dallas</option>
    <option value="LAX">Los Angeles</option>
    <option value="SEA">Seattle</option>
</select></label><br/>
  
  <label for="meeting-time">Estimated Departing Time</label>

<input type="datetime-local" id="meeting-time" name="departure">
  <br/>
<br/>
<label>Arrives At: <select name="arrivalAirport">
  <option value="AUS">Austin</option>
  <option value="DAL">Dallas</option>
  <option value="LAX">Los Angeles</option>
  <option value="SEA">Seattle</option>
</select></label><br/>

<label for="meeting-time">Estimated Arrival Time</label>

<input type="datetime-local" id="meeting-time" name="arrival">

  <input type="submit" value="update flights" />
</form>
